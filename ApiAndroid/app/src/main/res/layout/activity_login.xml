<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/loginmuseureal"
    android:orientation="vertical"
    tools:context=".Login">


    <androidx.cardview.widget.CardView
        app:cardCornerRadius="40dp"
        android:layout_marginTop="500px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        app:cardBackgroundColor="#000415">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:hint="@string/login"
                android:textColorHint="@color/white"
                android:textSize="30sp" />


            <com.example.api.CustomView
                android:id="@+id/idEmailUsuario"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="30dp"
                android:backgroundTint="@color/cardview_light_background"
                android:ems="10"
                android:hint="@string/email"
                android:inputType="textEmailAddress"
                android:textColor="@color/cardview_light_background"
                android:textColorHint="@android:color/background_light"
                android:textSize="24sp" />

            <com.example.api.CustomView
                android:id="@+id/idSenhaUsuario"
                android:layout_width="260dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="15dp"
                android:backgroundTint="@color/cardview_light_background"
                android:ems="10"
                android:hint="@string/Password"
                android:inputType="textPassword"
                android:textColor="@color/cardview_light_background"
                android:textColorHint="@color/cardview_light_background"
                android:textSize="24sp" />


            <Button
                android:id="@+id/button"
                android:layout_width="250dp"
                android:layout_height="60dp"
                android:layout_gravity="center"
                android:layout_marginTop="40dp"
                android:background="@drawable/botao_borda"
                android:hint="@string/confirmar"
                android:onClick="Conf"
                android:textColorHint="@android:color/white"
                android:textSize="24sp"
                app:backgroundTint="@color/light_blue_600" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="@string/FazerRegistro"
                    android:textColorHint="@android:color/white"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/btnCliqueAqui"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:hint="@string/cliqueaqui"
                    android:onClick="CadInt"
                    android:textColorHint="@android:color/holo_blue_bright"
                    android:textSize="18sp" />

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>
</LinearLayout>


